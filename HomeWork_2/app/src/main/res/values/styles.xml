<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="UserAvatarShape" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="UserLocalAvatarShape" parent="">
        <item name="cornerSize">15dp</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_corners_bottom_sheet</item>
    </style>

    <style name="MyToolbar" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="MyTabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabIndicatorColor">@color/green</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabPaddingBottom">37dp</item>
        <item name="tabPaddingStart">16dp</item>
        <item name="tabPaddingEnd">16dp</item>
        <item name="tabPaddingTop">14dp</item>
        <item name="tabTextColor">@color/light_gray_2</item>
        <item name="tabTextAppearance">@style/textAppearance.TabLayout</item>
    </style>

    <style name="textAppearance.TabLayout" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="ActionMenuIcon" parent="Widget.AppCompat.ActionButton">
        <item name="android:drawablePadding">28dp</item>
    </style>

</resources>