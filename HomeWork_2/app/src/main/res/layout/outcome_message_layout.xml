<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="16dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/messageTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@drawable/custom_background_outcome_message"
            android:maxWidth="250dp"
            android:text="@string/test_message"
            android:textColor="@color/light_white"
            android:textSize="18sp" />

        <com.example.myapplication.view.customViewGroup.FlexBoxLayout
            android:id="@+id/flexBoxLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="4dp">

            <ImageView
                android:id="@+id/customSmileAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/custom_add_view"
                android:clickable="true"
                android:focusable="true" />

        </com.example.myapplication.view.customViewGroup.FlexBoxLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>