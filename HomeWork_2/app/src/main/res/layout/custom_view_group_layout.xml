<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:src="@mipmap/ic_launcher_round" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_background_linear_layout"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Bri bri"
            android:textColor="@android:color/holo_blue_bright"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Message text some some"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

    </LinearLayout>

    <com.example.myapplication.FlexBoxLayout
        android:id="@+id/flexBoxLayout"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:padding="10dp">

        <com.example.myapplication.CustomSmileView
            android:id="@+id/customSmileAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_add_view" />

    </com.example.myapplication.FlexBoxLayout>

</merge>